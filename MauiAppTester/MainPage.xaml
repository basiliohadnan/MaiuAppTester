<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppTester.MainPage">

    <StackLayout Padding="30">

        <!-- Existing Buttons -->
        <Button Text="Simulate Button Click" Clicked="OnSimulateButtonClick"/>
        <Button Text="Open Device Folder" Clicked="OnOpenDeviceFolderClick"/>

        <!-- Text Input and Send Button -->
        <StackLayout Orientation="Horizontal" Margin="0,20,0,0">
            <Entry x:Name="TextInput" Placeholder="Type something..." HorizontalOptions="FillAndExpand"/>
            <Button Text="Send" Clicked="OnSendButtonClick"/>
        </StackLayout>

    </StackLayout>

</ContentPage>
